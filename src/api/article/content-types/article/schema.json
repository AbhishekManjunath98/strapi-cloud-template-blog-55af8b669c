{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "keywords": {
      "type": "text",
      "required": false
    },
    "sentiment": {
      "type": "string",
      "required": false
    },
    "readingTime": {
      "type": "integer",
      "required": false
    },
    "qualityScore": {
      "type": "decimal",
      "required": false
    },
    "articleStatus": {
      "type": "string",
      "required": false
    },
    "ntMetadata": {
      "type": "json",
      "required": false
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text"
    },
    "seo": {
      "type": "json"
    }
  }
}
